<!DOCTYPE html>
<html>
  <head>
    <title>Board</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Caveat rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="head">
    <%= link_to 'Bulletin board',root_path,class: "top_page"%>
    <div class = 'lists'>
      <%= link_to '掲示板へ', new_collect_path,class:"list" %>
      <% if user_signed_in?%>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete,class:"list" %>
      <%= link_to 'ユーザー情報', user_path(current_user.id),class:"list"%>
      <% else %>
      <%= link_to 'ログイン', new_user_session_path,class: "list" %>
      <%= link_to '新規登録',new_user_registration_path,class:"list" %>
      <% end %>
  </div>
  </div>
    <%= yield %>
  </body>
</html>
