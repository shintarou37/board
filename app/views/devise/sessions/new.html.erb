<div class = "conyainer mt-5" >
  <div class = "row">
    <div class = "col-6 mx-auto" >

      <h2>ログイン</h2>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label "Eメール",for:'login_email' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control",id:'login_email'%>
        </div>

        <div class="form-group">
          <%= f.label "パスワード",for:'login_password' %><br />
          <%= f.password_field :password, autocomplete: "current-password" ,class:"form-control",id:'login_password' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label "ログイン情報を記憶する" %>
          </div>
        <% end %>

        <%= f.submit "ログイン",class:"btn btn-primary" %>
      <% end %>
    </div>      
  </div>
</div>
