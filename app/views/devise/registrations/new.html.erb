<div class = "conyainer mt-5" >
  <div class = "row">
    <div class = "col-6 mx-auto" >
<h2>新規登録</h2>
<%= form_for(@user, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="form-group">
    <%= f.label "ニックネーム(必須)" %>
    <%= f.text_field :nickname,placeholder:"(例)山田 太郎", maxlength:"40",class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Eメール(必須)" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder:"(例)mail@mail"%>
  </div>

  <div class="form-group">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control", placeholder:"パスワード" %>
  </div>

  <div class="form-group">
    <%= f.label "パスワード確認用" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control", placeholder:"パスワード確認用" %>
  </div>

  <%= f.submit "次へ",class:"btn btn-primary" %>
<% end %>
    </div>
  </div>
</div>

