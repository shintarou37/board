<div class = 'registrations'>
  <div class = 'form'>
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <h2>ニックネーム</h2>
  <%= f.text_field :nickname, class:"nickname", id:"nickname", placeholder:"ニックネーム", maxlength:"40" %>
  </div>

  <div class="field">
  <h2>GitHub</h2>
  <%= f.text_field :GitHub, class:"nickname", id:"nickname", placeholder:"GitHub", maxlength:"40" %>
  </div>

  <div class="field">
  <h2>introduce</h2>
  <%= f.text_area :introduce, class:"nickname", id:"nickname", placeholder:"introduce", maxlength:"40" %>
  </div>

  <div class="field">
  <h2>年齢</h2>
  <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"genre-select"}) %>
  </div>

  <div class="field">
  <h2>prefectures_id</h2>
  <%= f.text_field :prefectures_id, class:"nickname", id:"nickname", placeholder:"prefectures_id", maxlength:"40" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <h2>language_id</h2>
  <%= f.collection_select(:prefectures_id, Prefecture.all, :id, :name, {}, {class:"genre-select"}) %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <h1>ユーザーアイコン</h1>
  <%= f.file_field :image, id:"item-image" %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>