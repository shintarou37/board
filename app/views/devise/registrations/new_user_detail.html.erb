<div class = "conyainer mt-5" >
  <div class = "row">
    <div class = "col-6 mx-auto" >

      <h2>詳細情報登録</h2>

      <%= form_for(@user_detail, url: new_user_details_path) do |f| %>
        <%= render "devise/shared/error_messages", resource: @user_detail %>

        <div class="form-group">
        <%= f.label "自己紹介" %>
        <%= f.text_area :introduce, class:"form-control",placeholder:"(例)〇〇会社に〇〇年に入社し、主に〇〇業務を担当しておりました。今回は〇〇のようなアプリケーションを作りたいと考えております。
        ", maxlength:"1000" %>
        </div>

        <div class="form-group">
        <%= f.label "年齢" %>
        <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"form-control"}) %>
        </div>

        <div class="form-group">
        <%= f.label "現在住んでいる都道府県" %>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"form-control"}) %>
        </div>

        <div class="form-group">
        <%= f.label "自分のエンジニアの種類" %>
        <%= f.collection_select(:type_id,Type.all,:id,:name, {}, {class:"form-control"}) %>
        </div>

        <div class="form-group">
        <%= f.label "習得言語、習得技能" %>
        <%= f.collection_select(:language_id, Language.all, :id, :name, {}, {class:"form-control"}) %>
        </div>

        <div class="form-group">
        <%= f.label "作りたい物" %>
        <%= f.collection_select(:goal_id, Goal.all, :id, :name, {}, {class:"form-control"}) %>
        </div>

        <div class="form-group">
        <%= f.label "GitHubのURL" %>
        <%= f.text_field :GitHub, class:"form-control", id:"nickname", placeholder:"GitHub", maxlength:"40" %>
        </div>

        <%= f.submit "登録",class:"btn btn-primary" %>

      <% end %>
      </div>
  </div>
</div>

