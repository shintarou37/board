<div class = "container mt-5" >
  <div class = "row">
    <div class = "col-10 mx-auto" >
    <h1>投稿の詳細詳細</h1>
      <div class="card" style="width: 100%;">
      <div class="card-header">
        <div>
        投稿ユーザー:<%= link_to @collect.user.nickname, user_path(@collect.user_id) %>
        </div>
      </div>

      <div class="card-body">
        <div>
        募集説明文:<%=  @collect.explanation %>
        </div>
        <div>
        募集言語:<%= @collect.language.name %>
        </div>
        <div>
        募集エンジニアの種類:<%= @collect.type.name %>
        </div>
        <div>
        作りたいもの:<%= @collect.goal.name %>
        </div>
        <div>
        開発フレームワーク:<%= @collect.framework.name %>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to '戻る', new_collect_path,class: 'back' %>
        <% if current_user.id == @collect.user_id %>
        <%= link_to '編集ページへ', edit_collect_path(@collect.id),class: 'edit' %>
        <%= link_to '投稿削除', collect_path(@collect.id), method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>
      
<div class = "container mt-4" >
  <div class = "row">
    <div class = "col-10 mx-auto" >

      <h3>コメント投稿</h3>
      <%= form_with model: @comment, url: collect_comments_path(@collect.id),id: "comment_form" do |f| %>
      <div class="form-group">
        <%= f.text_area :text,class:"form-control", placeholder:"コメントをしよう" %>
        <%= f.submit '投稿する',class: "btn btn-success mt-2"%>
      </div>
      <% end %>
      <div id='comments'>
        <% if @comments != nil %>
          <% @comments.reverse_each do |comment| %>
          <div class="card">
            <div class="card-header">
              コメント投稿者<%= link_to comment.user.nickname,user_path(comment.user_id) %>
            </div> 
          <div class="list-group-item mb-2">コメント:<%= comment.text %></div>
          </div>
          <% end %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>

